{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es2016", "dom.iterable", "scripthost"],
    "module": "None", // Change this to "None" or "CommonJS" if you're not using modules
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "babylonjs",
      "babylonjs-gui",
      "babylonjs-materials"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ]
}
